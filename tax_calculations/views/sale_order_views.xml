<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_order_form_tax_summary" model="ir.ui.view">
        <field name="name">sale.order.form.tax.summary</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Consolidate Tax">
                    <field name="tax_summary_ids">
                        <tree editable="bottom">
                            <field name="tax_name"/>
                            <field name="amount"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>